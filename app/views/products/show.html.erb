<div class="row">
  <div class="col-md-9">
    
<p id="notice"><%= notice %></p>

<h2>
  <strong><%= @product.title %></strong>
</h2>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Size:</strong>
  <%= @product.size %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <%= image_tag @product.image_url %>
</p>

<br>
<br>

<%= button_to "Add to Cart", order_items_path(@product_id) %>

<br>


<%= link_to "Write a Review", new_product_review_path(@product), class: "btn btn-primary" %>

</div>
  

  
</div>

<hr>

<h3 style="text-align: center;">COMPLETE YOUR LOOK</h3>
<div class="center">
<% @products.each do |p| %>
    <%= image_tag "products/#{@product.image_url}" %>
<% end %>
</div>



<hr>
<h3>REVIEWS</h3>
<% if @reviews.blank? %>
<h3>No reviews yet. Be the first to write one!</h3>
<% else %>
  <% @reviews.each do |review| %>
  <p><strong>Rating: </strong><%= review.rating %></p>
  <p><strong>Comment: </strong><%= review.comment %></p>
  <hr>
  <% end %>

<% end %>


<br>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
