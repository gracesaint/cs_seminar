<p id="notice"><%= notice %></p>

<h1>Women's Clothing</h1>

<table id= "products" style="margin-left: 30px; border-collapse: collapse;" border="0"; cellspacing="0";>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
     <!-- <th>Stock</th> -->
      <th>Color</th>
      <th>Size</th>
      <th>Description</th>
      <th>Image </th>
      <th>Buy</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody style="border-left: 0px none;
        	border-right: 0px none;">
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= print_price(product.price) %></td>
    <!--    <td>< print_stock(product.stock) %></td> -->
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.description %></td>
        <td><%= image_tag "products/#{product.image_url}" %></td>
        <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

